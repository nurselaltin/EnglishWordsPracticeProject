
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@model List<Word>


    



<br>
<br>
<h2 class="mt-4">WORDS LIST</h2>
<br>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Meaning</th>
                <th>Level</th>
                <th>Operations</th>

            </tr>
            <a asp-action="add" class="btn btn-success btn-secondary">Add New</a>
            <a asp-action="search" class="btn btn-success btn-secondary ml-3">Search</a>
        </thead>
        <tbody>
            @{
                int count = 1;
                string format = "d  MMM yyyy";

            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td>@item.Meaning</td>
                    <td>@item.Level</td>
                    
                    <td>

                        <a href="Home/UpdateView/@item.Id"  class="btn btn-info btn-sm">Update</a>
                        <a href="Home/Remove/@item.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
                count += 1;
            }



        </tbody>
    </table>
</div>

