@model Word 
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<br>
<br>
<h2 class="mt-4">@Model.Name.ToUpper()</h2>
<br>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Meaning</th>
                <th>Level</th>
                <th>Operations</th>

            </tr>
            <a asp-action="index" class="btn btn-success btn-secondary">Home</a>
        </thead>
        <tbody>
            @{
                int count = 1;
                string format = "d  MMM yyyy";

            }
           
                <tr>
                    <td>@count</td>
                    <td>@Model.Name</td>
                    <td>@Model.Meaning</td>
                    <td>@Model.Level</td>

                    <td>

                        <a href="Home/UpdateView/@Model.Id" class="btn btn-info btn-sm">Update</a>
                        <a href="Home/Remove/@Model.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
              
            



        </tbody>
    </table>
</div>

